[Unit]
After=weave.service
Description=Weave Network Proxy
Documentation=http://docs.weave.works/
Requires=weave.service

[Service]
Restart=always
RestartSec=10
TimeoutStartSec=5min
EnvironmentFile=/etc/weave.env
ExecStartPre=-/opt/weave/bin/weave stop-proxy
ExecStartPre=-/usr/bin/docker rm -f weaveproxy
ExecStartPre=/opt/weave/bin/weave launch-proxy -H tcp://127.0.0.1:12375
ExecStart=/usr/bin/docker logs -f weaveproxy
SuccessExitStatus=2
ExecStop=-/opt/weave/bin/weave stop-proxy

[Install]
WantedBy=weave-network.target